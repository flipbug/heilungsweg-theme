{% extends 'partials/base.html.twig' %}

{% block content %}

    <section class="hero is-medium is-primary is-bold">
        <div class="hero-head">

        </div>
        <div class="hero-body">
            <section class="section">

                <div class="container">
                    <div class="columns">
                        <div class="column is-8-desktop">
                            <h1 class="title is-2 is-spaced">{{ page.header.custom.hometitle }}</h1>
                            <h2 class="subtitle is-4">{{ page.header.custom.homesubtitle }}</h2>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section introduction">
                <div class="container">
                    <div class="columns">

                        <div class="column is-4-desktop">
                            <div class="content">
                                {{ page.header.custom.boxone.content|markdown }}
                                <a class="" href="{{ page.header.custom.boxone.page }}"><button
                                        class="button">Mehr erfahren →</button></a>
                            </div>
                        </div>

                        <div class="column is-4-desktop">
                            <div class="content">
                                {{ page.header.custom.boxtwo.content|markdown }}
                                <a class="" href="{{ page.header.custom.boxtwo.page }}"><button
                                        class="button">Mehr erfahren →</button></a>
                            </div>
                        </div>

                        <div class="column is-4-desktop">
                            <div class="content">
                                {{ page.header.custom.boxthree.content|markdown }}
                                <a class="" href="{{ page.header.custom.boxthree.page }}"><button
                                        class="button">Mehr erfahren →</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </section>

    <section class="section">

        <div class="container">

            <div class="columns">
                <div class="column  is-8-desktop">
                    <div class="content">

                        {{ page.content }}  

                    </div>
                </div>

                <div class="column is-offset-1 is-3-desktop address">
                    <div class="content">
                        <h2>Adresse</h2>
                            {{ page.header.custom.address|markdown }}
                    </div>
                </div>



            </div>
        </div>

    </section>

        <section class="section">

        <div class="container">
            <hr>
        </div>
    </section>

    <section class="section">

        <div class="container">

            <div class="columns">

                <div class="column  is-4-desktop">
                    <div class="content">
                        {{ page.header.custom.blog|markdown }}
                        <a class="" href="/blog"><button class="button">Alle Artikel →</button></a>
                    </div>
                </div>

                <div class="column  is-8-desktop">
                    <div class="content">

                    {% for post in page.find('/blog').children.order('publish_date', 'desc').slice(0, 3) %}
                        {% include 'partials/post.html.twig' %}
                    {% endfor %}
  

                    </div>
                </div>
            </div>
        </div>

    </section>


{% endblock %}
