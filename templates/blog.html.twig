{% extends 'partials/base.html.twig' %}

{% block content %}

<div class="nav-spacer"></div>

<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-8">

                <div class="content">
                    <h1>
                        {{ page.title }}
                    </h1>
                    
                    {{ page.content }}
                </div>

                <hr>

                {% for post in page.find('/blog').children.order('publish_date', 'desc') %}
                    {% include 'partials/post.html.twig' %}
                {% endfor %}

            </div>
        </div>
    </div>
</section>

{% endblock %}
